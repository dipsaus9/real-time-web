{
  "name": "real-time-web",
  "version": "1.0.0",
  "description": "Pong with sockets",
  "main": "server.js",
  "scripts": {
    "start": "concurrently \"npm run serverWatch\" \"npm run  watch-css\" \"npm run babelWatch\"",
    "server": "node ./node/server.js",
    "build": "concurrently \"npm run clean\" \"npm run build-css\" \"npm run copyJs\" \"npm run copyImages\"",
    "copyImages": "copyfiles -u 1 src/img/*.* public",
    "copyJs": "copyfiles -u 1 src/js/*.* public",
    "build-css": "node-sass src/scss/app.scss public/css/app.css",
    "watch-css": "nodemon -e scss -x \"npm run build-css\"",
    "babelWatch": "nodemon --watch ./src/js -x \"npm run copyJs\"",
    "serverWatch": "nodemon --watch ./node -x \"npm run server\"",
    "clean": "del-cli public/**"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dipsaus9/real-time-web.git"
  },
  "keywords": [
    "socket"
  ],
  "author": "dipsaus9",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/dipsaus9/real-time-web/issues"
  },
  "homepage": "https://github.com/dipsaus9/real-time-web#readme",
  "dependencies": {
    "concurrently": "^3.5.1",
    "copyfiles": "^2.0.0",
    "del-cli": "^1.1.0",
    "ejs": "^2.5.8",
    "express": "^4.16.3",
    "node-sass": "^4.8.3"
  },
  "devDependencies": {
    "nodemon": "^1.17.3"
  }
}
